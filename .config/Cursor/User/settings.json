{
  "files.trimTrailingWhitespace": true,
  "editor.snippetSuggestions": "top",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,

  // BEST UI
  "scm.diffDecorations": "none",
  "editor.hover.delay": 1500,
  "editor.hover.enabled": true,
  "editor.matchBrackets": "never",
  "workbench.tips.enabled": false,
  "editor.colorDecorators": false,
  "git.decorations.enabled": false,
  "editor.lightbulb.enabled": "off",
  "editor.selectionHighlight": false,
  "editor.overviewRulerBorder": false,
  "editor.renderLineHighlight": "none",
  "editor.occurrencesHighlight": "off",
  "problems.decorations.enabled": false,
  "editor.renderControlCharacters": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleDeclarations": "goto",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",

  "editor.fontFamily": "JetBrains Mono",
  "window.titleBarStyle": "custom",
  "workbench.editor.empty.hint": "hidden",

  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.colorCustomizations": {
    "terminal.background": "#00000000"
  },
  "workbench.settings.applyToAllProfiles": ["workbench.colorCustomizations"],
  "editor.minimap.enabled": false,

  // VIM STUFF
  "vim.leader": "Space",
  "vim.overrideCopy": true,

  "editor.lineNumbers": "relative",
  "vim.handleKeys": {
    "<C-b>": false,
    "<C-w>": false,
    "<C-m>": false,
    "<C-e>": false,
    "<C-y>": false,
    "<C-t>": false
  },

  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["<S-h>"], "commands": [":bprevious"] },
    { "before": ["<S-l>"], "commands": [":bnext"] },
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"]
    }
  ],
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "terminal.integrated.fontFamily": "CaskaydiaMono Nerd Font Propo",
  "editor.fontLigatures": true,
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "breadcrumbs.enabled": false,
  "breadcrumbs.icons": false,
  "npm.packageManager": "pnpm",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "supermaven.enable": {
    "*": false
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.productIconTheme": "bongocat",
  "vscode-blur-linux.opacity": 1,
  "animations.Install-Method": "Apc Customize UI++",
  "apc.imports": [
    "file://${userHome}/.cursor/extensions/brandonkirbyson.vscode-animations-2.0.7/dist/updateHandler.js"
  ],
  "transparent-win.transparency": 0.2,
  "glassit.alpha": 40,
  "glassit.force_sway": true,
  "workbench.colorTheme": "Gruvbox Dark Medium",
  "workbench.layoutControl.enabled": false,
  "window.autoDetectColorScheme": true,
  "workbench.preferredLightColorTheme": "Gruvbox Light Soft",
  "cursor.cmdk.useThemedDiffBackground": true,
  "editor.cursorBlinking": "smooth",
  "vscode_custom_css.imports": [
    "file:///home/ezwal/.cursor/extensions/yesitsfebreeze.smearcursor-1.1.6/_smearcursor.js"
  ],
  "cursor.cpp.disabledLanguages": [],
  "javascript.updateImportsOnFileMove.enabled": "always",
  "git.openRepositoryInParentFolders": "never",
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.preferredDarkColorTheme": "Catppuccin Mocha",
  "workbench.sideBar.location": "right",
  "workbench.iconTheme": "symbols",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "explorer.confirmDelete": false,
  "window.menuBarVisibility": "compact",
  "explorer.confirmDragAndDrop": false,
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "workbench.editor.editorActionsLocation": "titleBar",
  "window.customTitleBarVisibility": "auto",
  "workbench.statusBar.visible": false
}
